<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/detailed_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/txtField_radious"
    android:background="@color/register_button"
    app:cardCornerRadius="@dimen/txtField_radious"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mealImage1"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:paddingTop="@dimen/txtField_radious"
            android:scaleType="fitCenter"
            android:src="@drawable/meal" />

        <TextView
            android:id="@+id/mealTitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/button_radious"
            android:text="@string/meal_name"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/button_radious"
                android:text="@string/price"
                android:textColor="@color/background"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/addButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/button_radious"
                app:srcCompat="@drawable/add" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/favoriteIcon1"
        android:layout_width="@dimen/logo"
        android:layout_height="@dimen/logo"
        android:layout_gravity="top|end"
        android:padding="@dimen/button_radious"
        app:srcCompat="@drawable/heart"
        app:tint="@color/red" />

</androidx.cardview.widget.CardView>